    </servlet>
    <servlet-mapping>
        <servlet-name>Prepare_project</servlet-name>
        <url-pattern>/prepare_project</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>faillogin</servlet-name>
        <jsp-file>/WEB-INF/jsp/faillogin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>faillogin</servlet-name>
        <url-pattern>/faillogin</url-pattern>
    </servlet-mapping>
          
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <description>MySQL</description>
    <resource-ref>
        <description>MySQL DB Connection pool</description>
        <res-ref-name>jdbc/devTeam</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    </web-app>
