        <jsp-file>/WEB-INF/jsp/dashboard.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Dashboard_customer</servlet-name>
        <jsp-file>/WEB-INF/jsp/dashboard_customer.jsp</jsp-file>
    </servlet>
