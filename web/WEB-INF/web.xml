        <servlet-name>Dashboard_customer</servlet-name>
        <url-pattern>/dashboard_customer</url-pattern>
    </servlet-mapping>
    
    
    
    <servlet>
        <servlet-name>ErrorPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorPage</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Successfull</servlet-name>
